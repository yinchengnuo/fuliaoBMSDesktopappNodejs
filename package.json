{
  "name": "fl",
  "version": "1.0.0",
  "description": "fl bms",
  "main": "index.js",
  "build": {
    "productName":"富聊后台审核系统",
    "appId": "com.fl.app",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "icon.ico",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "nsis": {
      "oneClick": false, 
      "allowElevation": true, 
      "allowToChangeInstallationDirectory": true, 
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico", 
      "createDesktopShortcut": true, 
      "createStartMenuShortcut": true,
      "shortcutName": "富聊后台审核系统"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder --win --x64"
  },
  "author": "yinchengnuo",
  "license": "ISC",
  "devDependencies": {
    "asar": "^2.0.1",
    "electron": "^9.4.0"
  }
}
